datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

enum Role {
  USER
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  groups        Group[]   @relation("UserGroups")
  messages      ChatMessage[]
  pageRevisions PageRevision[] @relation("PageRevisionCreatedBy")
  mediaAssets   MediaAsset[]   @relation("MediaAssetCreatedBy")
  
  // Custom fields
  bio           String?
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Group {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  icon        String?
  
  users       User[]   @relation("UserGroups")
  links       ServiceLink[] @relation("GroupLinks")
}

model ServiceLink {
  id          String   @id @default(cuid())
  title       String
  url         String
  icon        String?  // Lucide icon name
  description String?
  isPublic    Boolean  @default(false)
  order       Int      @default(0)

  groups      Group[]  @relation("GroupLinks") // If empty and !isPublic, maybe accessible to no one or all? Logic to be defined.
}

model ChatMessage {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SiteConfig {
  key       String   @id
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Page {
  id                   String         @id @default(cuid())
  slug                 String         @unique
  title                String
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  publishedRevisionId  String?        @unique
  draftRevisionId      String?        @unique

  revisions            PageRevision[] @relation("PageRevisions")
  publishedRevision    PageRevision?  @relation("PagePublishedRevision", fields: [publishedRevisionId], references: [id])
  draftRevision        PageRevision?  @relation("PageDraftRevision", fields: [draftRevisionId], references: [id])
}

model PageRevision {
  id          String   @id @default(cuid())
  pageId      String
  title       String
  blocks      Json
  createdAt   DateTime @default(now())
  createdById String?

  page        Page     @relation("PageRevisions", fields: [pageId], references: [id], onDelete: Cascade)
  createdBy   User?    @relation("PageRevisionCreatedBy", fields: [createdById], references: [id], onDelete: SetNull)
  publishedFor Page?   @relation("PagePublishedRevision")
  draftFor     Page?   @relation("PageDraftRevision")
}

model MediaAsset {
  id           String   @id @default(cuid())
  url          String   @unique
  originalName String
  mimeType     String
  size         Int
  createdAt    DateTime @default(now())
  createdById  String?

  createdBy    User?    @relation("MediaAssetCreatedBy", fields: [createdById], references: [id], onDelete: SetNull)
}
